<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import com.studyspace.components.PasswordFieldWithEye?>

<StackPane prefHeight="540.0" prefWidth="352.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyspace.auth.AuthViewController">
   <children>
      <!-- Main Auth Container -->
      <VBox alignment="CENTER" prefHeight="454.0" prefWidth="422.0" styleClass="auth-container">
         <children>
            <!-- Logo and App Name -->
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="12.0">
               <children>
                  <!-- Logo -->
                  <VBox alignment="CENTER" styleClass="auth-logo">
                     <children>
                        <ImageView fx:id="authLogoIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <!-- App Name -->
                  <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="62.0" prefWidth="300.0" spacing="4.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="auth-app-name" text="StudySpace" />
                        <Label styleClass="auth-tagline" text="Your AI-powered study companion" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="16.0" styleClass="auth-header-section" />
            
            <!-- Main Auth Card -->
            <VBox alignment="CENTER" styleClass="auth-card">
                <children>
                    <!-- Forms Container -->
                    <StackPane fx:id="formsContainer" styleClass="forms-container">
                     <children>
                        <!-- Sign In Form -->
                        <VBox fx:id="signInForm" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="353.0" prefWidth="352.0" spacing="20.0" styleClass="form-container">
                           <children>
                              <!-- Title -->
                              <Label styleClass="auth-header" text="Welcome Back" />
                              
                              <!-- Toggle Buttons Side by Side -->
                              <HBox alignment="CENTER" spacing="4" maxWidth="300">
                                 <children>
                                    <Button fx:id="signInToggle" mnemonicParsing="false" prefHeight="52.0" prefWidth="148.0" styleClass="toggle-button active" text="Login" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="signUpToggle" mnemonicParsing="false" prefHeight="52.0" prefWidth="148.0" styleClass="toggle-button" text="Sign Up" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              
                              <!-- Email Field -->
                              <VBox spacing="8.0" styleClass="field-container">
                                 <children>
                                    <Label styleClass="field-label" text="Email" />
                                    <TextField fx:id="signInEmail" promptText="Enter your email address" styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                              <!-- Password Field -->
                              <VBox spacing="8.0" styleClass="field-container">
                                 <children>
                                    <Label styleClass="field-label" text="Password" />
                                    <PasswordFieldWithEye fx:id="signInPassword" promptText="Enter your password" styleClass="password-field-container" />
                                 </children>
                              </VBox>
                              
                              <!-- Sign In Button -->
                              <Button fx:id="signInButton" mnemonicParsing="false" styleClass="primary-button" text="Sign In" />
                              
                              <!-- Error Message -->
                              <Label fx:id="signInError" styleClass="error-message" visible="false" />
                           </children>
                        </VBox>
                        
                        <!-- Sign Up Form -->
                        <VBox fx:id="signUpForm" alignment="CENTER" spacing="20.0" styleClass="form-container" visible="false">
                           <children>
                              <!-- Title -->
                              <Label styleClass="auth-header" text="Create Account" />
                              
                              <!-- Toggle Buttons Side by Side -->
                              <HBox alignment="CENTER" spacing="4" maxWidth="300">
                                 <children>
                                    <Button fx:id="signInToggle2" mnemonicParsing="false" prefHeight="52.0" prefWidth="148.0" styleClass="toggle-button" text="Login" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="signUpToggle2" mnemonicParsing="false" prefHeight="52.0" prefWidth="148.0" styleClass="toggle-button active" text="Sign Up" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              
                              <!-- Full Name Field -->
                              <VBox spacing="8.0" styleClass="field-container">
                                 <children>
                                    <Label styleClass="field-label" text="Full Name" />
                                    <TextField fx:id="signUpFullName" promptText="Enter your full name" styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                              <!-- Email Field -->
                              <VBox spacing="8.0" styleClass="field-container">
                                 <children>
                                    <Label styleClass="field-label" text="Email" />
                                    <TextField fx:id="signUpEmail" promptText="Enter your email" styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                              <!-- Password Field -->
                              <VBox spacing="8.0" styleClass="field-container">
                                 <children>
                                    <Label styleClass="field-label" text="Password" />
                                    <PasswordFieldWithEye fx:id="signUpPassword" promptText="Create a password" styleClass="password-field-container" />
                                 </children>
                              </VBox>
                              
                              <!-- Sign Up Button -->
                              <Button fx:id="signUpButton" mnemonicParsing="false" styleClass="primary-button" text="Create Account" />
                              
                              <!-- Error Message -->
                              <Label fx:id="signUpError" styleClass="error-message" visible="false" />
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
